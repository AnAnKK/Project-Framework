<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:alpha="1"
        android:background="@drawable/shape_immsersion_main"
        app:title="Pop"
        app:navigationIcon="@drawable/icon_back_white"
        app:titleTextColor="@android:color/white" />
    <TextView
        android:id="@+id/textView_normal"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="普通弹窗"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_666666"/>
    <TextView
        android:id="@+id/textView_noTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:text="无标题"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_666666"/>
    <TextView
        android:id="@+id/textView_noContent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:text="无内容"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_666666"/>
    <TextView
        android:id="@+id/textView_singleButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:text="单按钮"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_666666"/>
</LinearLayout>
