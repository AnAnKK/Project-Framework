<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowButton">
        <!--触摸时的颜色， 默认#9C000000-->
        <attr name="sb_color_pressed" format="color" />
        <!--未触摸/触摸层的颜色， 默认Color.TRANSPARENT-->
        <attr name="sb_color_unpressed" format="color" />
        <!--波纹的颜色，默认#FFEEEEEE-->
        <attr name="sb_ripple_color" format="color" />
        <!--波纹的透明度， 默认47-->
        <attr name="sb_ripple_alpha" format="integer" />
        <!--触摸时的透明度， 默认48-->
        <attr name="sb_alpha_pressed" format="integer" />
        <!--波纹持续的时间， 默认1000ms-->
        <attr name="sb_ripple_duration" format="integer" />
        <!--按钮角的弧度， 默认2dp-->
        <attr name="sb_radius" format="dimension" />
        <!--按钮的形状， 默认rectangle-->
        <attr name="sb_shape_type" format="enum">
            <enum name="round" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
    </declare-styleable>

    <!--  ShineButton  -->
    <declare-styleable name="ShineButton">
        <!-- 未选中时的填充颜色，默认是#AAAAAA -->
        <attr name="sb_normal_color" format="color" />
        <!-- 选中时的填充颜色，默认R.attr.colorAccent  -->
        <attr name="sb_checked_color" format="color" />
        <!-- 是否使用随机颜色，默认是false  -->
        <attr name="sb_allow_random_color" format="boolean" />
        <!-- 发散动画持续的时间，默认是 1500ms -->
        <attr name="sb_shine_animation_duration" format="integer" />
        <!-- 点击动画持续的时间，默认是 200ms -->
        <attr name="sb_click_animation_duration" format="integer" />
        <!-- 是否开启闪烁，默认是false -->
        <attr name="sb_enable_flashing" format="boolean" />
        <!-- 发散距离的倍数，必须大于1，默认是1.5 -->
        <attr name="sb_shine_distance_multiple" format="float" />
        <!-- 发散点的数量，默认是7 -->
        <attr name="sb_shine_count" format="integer" />
        <!-- 发散点起始的大小，默认是按钮宽度的一半 -->
        <attr name="sb_shine_size" format="dimension" />
        <!-- 发散点的转角度数，默认是20 -->
        <attr name="sb_shine_turn_angle" format="float" />
        <!-- 小发散点的偏移角度，默认是20 -->
        <attr name="sb_small_shine_offset_angle" format="float" />
        <!-- 小发散点的颜色，默认是#666666 -->
        <attr name="sb_small_shine_color" format="color" />
        <!-- 大发散点的颜色，默认是选中时的填充颜色 -->
        <attr name="sb_big_shine_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PorterShapeImageView">
        <!-- 图标资源  -->
        <attr name="sb_icon_image" format="reference" />
    </declare-styleable>

    <attr name="ShineButtonStyle" format="reference" />


    <attr name="RadiusImageViewStyle" format="reference" />
    <declare-styleable name="RadiusImageView">
        <!--边框宽度，默认：0-->
        <attr name="riv_border_width" format="dimension" />
        <!--边框的颜色，默认：Color.GRAY-->
        <attr name="riv_border_color" format="color" />
        <!--选中时，覆盖在图片上的图层颜色，默认：Color.TRANSPARENT-->
        <attr name="riv_selected_mask_color" format="color" />
        <!--边框选中时的颜色，默认：Color.GRAY-->
        <attr name="riv_selected_border_color" format="color" />
        <!--边框选中时的宽度，默认：0-->
        <attr name="riv_selected_border_width" format="dimension" />
        <!--圆角的大小，默认0-->
        <attr name="riv_corner_radius" format="dimension" />
        <!--是否是椭圆形，默认：false-->
        <attr name="riv_is_oval" format="boolean" />
        <!--图片是否是圆形的，默认：false-->
        <attr name="riv_is_circle" format="boolean" />
        <!--图片是否可触摸选中，默认：true-->
        <attr name="riv_is_touch_select_mode_enabled" format="boolean" />
    </declare-styleable>

    <!-- MarqueeView -->
    <declare-styleable name="MarqueeView">
        <!--翻页的间隔-->
        <attr name="mq_interval" format="integer" />
        <!--动画的间隔-->
        <attr name="mq_animDuration" format="integer" />
        <!--动画的样式资源-->
        <attr name="mq_animIn" format="reference" />
        <attr name="mq_animOut" format="reference" />
    </declare-styleable>
</resources>